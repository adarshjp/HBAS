<%- include("partials/header") %>
    <div class="row justify-content-center align-items-center mx-auto">
        <h3 class="p-2" id="admith3"><u>All districts Hospital details</u></h3>
        <div class="col-12 p-2">
            <table class="table table-striped table-dark p-2">
                <tr>
                    <th>District</th>
                    <th>Hospital</th>
                    <th colspan="4">Total Beds</th>
                    <th colspan="4">Available Beds</th>
                    <th colspan="4">Occupied Beds</th>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td>General</td>
                    <td>Oxygen</td>
                    <td>ICU</td>
                    <td>ICU with Ventilator</td>
                    <td>General</td>
                    <td>Oxygen</td>
                    <td>ICU</td>
                    <td>ICU with Ventilator</td>
                    <td>General</td>
                    <td>Oxygen</td>
                    <td>ICU</td>
                    <td>ICU with Ventilator</td>       
                </tr>
                <% district.forEach((district)=>{ %>
                <tr>
                    <th colspan="1"><%= district.name%></th>
                </tr>
                <% hospital.forEach((hospital)=>{ %>
                    <% if(district._id.toString() === hospital.districtid.toString()) { %>
                        <tr>
                            <th colspan="1"></th>
                            <th colspan="1"><%= hospital.name%></th>
                            <td><%= hospital.totalbeds.general%></td>
                            <td><%= hospital.totalbeds.oxygen%></td>
                            <td><%= hospital.totalbeds.icu %></td>
                            <td><%= hospital.totalbeds.icu_v %></td>
                            <td><%= hospital.avaliablebeds.general%></td>
                            <td><%= hospital.avaliablebeds.oxygen%></td>
                            <td><%= hospital.avaliablebeds.icu%></td>
                            <td><%= hospital.avaliablebeds.icu_v%></td>
                            <td><%= hospital.occupiedbeds.general%></td>
                            <td><%= hospital.occupiedbeds.oxygen%></td>
                            <td><%= hospital.occupiedbeds.icu%></td> 
                            <td><%= hospital.occupiedbeds.icu_v%></td>       
                        </tr>   
                    <% } %>
                <% }) %>
                <% }) %>
            </table>
        </div>
        <div class="p-2 text-center">
            <a class="btn btn-outline-warning rounded-pill p-2" href="/">Home</a>
        </div>
    </div>
<%- include("partials/footer") %>
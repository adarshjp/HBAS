<%- include("partials/header") %>
<div class="container container-fluid text-center p-2" id="hospcontainer">
    <h2 style="color: aquamarine;"><u>Hospital Details</u></h2>
    <div class="row justify-content-center align-items-center p-2">
        <div class="col-12 p-2">
            <p><%= user.name %></p>
        </div>
        <div class="col-12 p-2">
            <p><%= user._id %></p>
        </div>
        <div class="col-12 mp-2">
            <p><%= user.address %></p>
        </div>
        <div class="col-12 p-2">
            <p><%= user.phoneno %></p>
        </div>
        <div class="col-12 p-2">
            <table class="table table-striped table-dark" id="hosptable">
                <tr>
                    <th>Total Beds</th>
                    <td>General Beds</td>
                    <td><%= user.totalbeds.general %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>Oxygen Beds</td>
                    <td><%= user.totalbeds.oxygen %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>ICU Beds</td>
                    <td><%= user.totalbeds.icu %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>ICU with ventilator Beds</td>
                    <td><%= user.totalbeds.icu_v %></td>
                </tr>
                <tr>
                    <th>Available Beds</th>
                    <td>General Beds</td>
                    <td><%= user.avaliablebeds.general %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>Oxygen Beds</td>
                    <td><%= user.avaliablebeds.oxygen %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>ICU Beds</td>
                    <td><%= user.avaliablebeds.icu %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>ICU with ventilator Beds</td>
                    <td><%= user.avaliablebeds.icu_v %></td>
                </tr>
                <tr>
                    <th>Occupied Beds</th>
                    <td>General Beds</td>
                    <td><%= user.occupiedbeds.general %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>Oxygen Beds</td>
                    <td><%= user.occupiedbeds.oxygen %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>ICU Beds</td>
                    <td><%= user.occupiedbeds.icu %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>ICU with ventilator Beds</td>
                    <td><%= user.occupiedbeds.icu_v %></td>
                </tr>
            </table>
        </div>
        <div class="p-3 text-center">
            <a class="btn btn-outline-warning btn-lg rounded-pill p-2" href="/admit">Admit</a>
            <a class="btn btn-outline-warning btn-lg rounded-pill p-2" href="/viewpatients">View Patients</a>
            <a class="btn btn-outline-warning btn-lg rounded-pill p-2" href="/logout">LogOut</a>
        </div>
    </div>
</div>
<%- include("partials/footer") %>